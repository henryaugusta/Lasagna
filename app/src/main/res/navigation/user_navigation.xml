<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.feylabs.lasagna.view.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_contactListFragment"
            app:destination="@id/contactListFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_my_report"
        android:name="com.feylabs.lasagna.view.ui.report.MyReportFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_my_report" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.feylabs.lasagna.view.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.feylabs.lasagna.view.ui.settings.SettingsFragment"
        android:label="Profile" />
    <fragment
        android:id="@+id/contactListFragment"
        android:name="com.feylabs.lasagna.view.ui.contact.ContactListFragment"
        android:label="fragment_contact_list"
        tools:layout="@layout/fragment_contact_list" />


</navigation>